$TTL 86400
@ IN SOA control.{{ domain }}. root.{{ ansible_fqdn }}.{{ domain }}. (
              3           ;Serial
              3600        ;Refresh
              1800        ;Retry
              604800      ;Expire
              86400       ;Minimum TTL
)

;Name Server Information
@       IN  NS      {{ ansible_fqdn }}.{{ domain }}.

;IP address of Name Server
control  IN  A       {{ ansible_eth0.ipv4.address }}


;A - Record HostName To Ip Address
